<h1><%= t('posts.new') %></h1>

<%= link_to 'Back', posts_path %>

<%= form_for :post, url: posts_path do |f| %>

  <p>
      <%= f.label :content %><br />
      <%= f.text_area :content, class: "form-control", rows: "6", style: "width: 400px" %>
  </p>

  <p>
      <%= f.submit t('posts.submit_button'), class: "btn btn-success" %>
  </p>

<% end %>
